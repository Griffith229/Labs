dia = input("Яку дію виконуємо?(+,-,*):")
a = int(input("Введіть перше: "))
b = int(input("Введіть друге: "))
if dia == "+":
    c = a + b
    print("Результат:" + str(c))
elif dia == "-":
    c = a - b
    print("Результат:" + str(c))
elif dia == "*":
    c = a * b
    print("Результат: " + str(c))
else:
    print("Не вірно!")
